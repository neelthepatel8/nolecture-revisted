{
  "name": "nolecture-revisited",
  "version": "1.0.0",
  "description": "NoLecture Revisited",
  "main": "_",
  "repository": "https://github.com/neelthepatel8/nolecture-revisted",
  "author": "Neel Patel",
  "license": "MIT",
  "scripts": {
    "install-vm": "python3 -m venv .venv",
    "update-requirements": "source .venv/bin/activate && pip freeze > requirements.txt",
    "build": "source .venv/bin/activate && pip install -r requirements.txt",
    "build-prod": "pip install -r requirements.txt",
    "start": "make",
    "add-api": "source .venv/bin/activate && pip install \"$(echo $npm_config_argv | jq -r '.remain[0]')\" && yarn update-requirements"
  }
}
